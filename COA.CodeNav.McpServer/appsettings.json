{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.CodeAnalysis": "Warning",
      "Microsoft.Build": "Warning",
      "System": "Warning",
      "COA.CodeNav.McpServer": "Debug"
    }
  },
  "CodeNav": {
    "BasePath": ".codenav"
  },
  "WorkspaceManager": {
    "MaxConcurrentWorkspaces": 10,
    "WorkspaceIdleTimeout": "00:30:00",
    "MaxCachedDocuments": 1000,
    "IdleCheckInterval": "00:05:00",
    "EnableMemoryPressureEviction": true,
    "MemoryPressureThresholdMB": 2048
  },
  "Startup": {
    "AutoLoadSolution": true,
    "SolutionPath": null,
    "MaxSearchDepth": 5,
    "PreferredSolutionName": null,
    "RequireSolution": false
  }
}